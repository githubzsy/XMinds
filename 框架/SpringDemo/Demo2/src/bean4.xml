<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="order" class="com.zhoushiya.springDemo.demo2.bean.Order" init-method="initMethod" destroy-method="destroyMethod">
        <property name="name" value="这是一个订单" ></property>
    </bean>

    <!-- 创建后置处理器 -->
    <bean id="myBeanPostProcessor" class="com.zhoushiya.springDemo.demo2.bean.MyBeanPostProcessor"></bean>
</beans>